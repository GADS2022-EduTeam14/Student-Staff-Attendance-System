<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_app" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/LocalBrown</item>
        <item name="colorPrimaryVariant">@color/LocalBrownDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LocalYellow</item>
        <item name="colorSecondaryVariant">@color/LocalYellowDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorOnSurface">?attr/colorPrimary</item>

        <item name="colorOnSecondaryContainer">?attr/colorPrimary</item>


        <!-- Customize your theme here. -->

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.EduTeam.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.EduTeam.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.EduTeam.LargeComponent
        </item>

    </style>


    <style name="SplashTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
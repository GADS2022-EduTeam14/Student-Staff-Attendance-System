<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".core.ui.addschool.AddSchoolCompleteActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:text="More School information"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="School days"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbx_Monday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Monday" />

        <CheckBox
            android:id="@+id/cbx_Tuesday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Tuesday" />

        <CheckBox
            android:id="@+id/cbx_Wednesday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Wednesday" />

        <CheckBox
            android:id="@+id/cbx_Thursday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Thursday" />

        <CheckBox
            android:id="@+id/cbx_Friday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Friday" />

        <CheckBox
            android:id="@+id/cbx_Saturday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Saturday" />

    </LinearLayout>

    <!-- Linear layout to house the time -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From" />

            <Spinner
                android:id="@+id/spn_mon_frm"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_tues_frm"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_wed_frm"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_thurs_frm"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_fri_frm"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_sat_frm"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To" />

            <Spinner
                android:id="@+id/spn_mon_to"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_tues_to"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_wed_to"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_thurs_to"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_fri_to"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />

            <Spinner
                android:id="@+id/spn_sat_to"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:entries="@array/SchoolTimes" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Times"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Create School"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>